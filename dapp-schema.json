{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "XYO dApp manifest",
  "additionalProperties": false,
  "definitions": {
    "module": {
      "additionalProperties": false,
      "description": "Module Definition",
      "properties": {
        "address": {
          "$ref": "#/definitions/address"
        },
        "name": {
          "type": "string"
        },
        "framework": {
          "$ref": "#/definitions/framework"
        },
        "language": {
          "$ref": "#/definitions/language"
        },
        "os": {
          "$ref": "#/definitions/os"
        },
        "uri": {
          "type": "string",
          "format": "uri"
        }
      },
      "required": [],
      "type": "object"
    },
    "modules": {
      "description": "List of Modules",
      "items": {
        "$ref": "#/definitions/module"
      },
      "nullable": true,
      "type": "array"
    },
    "address": {
      "description": "Address of an XYO Module",
      "type": "string"
    },
    "os": {
      "description": "Operating System",
      "enum": [
        "windows",
        "linux",
        "osx",
        "android",
        "ios"
      ],
      "type": "string"
    },
    "framework": {
      "description": "Framework",
      "enum": [
        "nodejs",
        "browser",
        "react"
      ],
      "type": "string"
    },
    "language": {
      "description": "Language",
      "enum": [
        "javascript",
        "kotlin",
        "swift"
      ],
      "type": "string"
    }
  },
  "properties": {
    "$schema": {
      "type": "string"
    },
    "private": {
      "$ref": "#/definitions/modules"
    },
    "public": {
      "$ref": "#/definitions/modules"
    }
  },
  "required": []
}